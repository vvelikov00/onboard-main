---
import Navbar from '../layouts/components/navbar.astro'
import Footer from './components/footer.astro'

export interface Props {
    title?: string
}

const {title} = Astro.props

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
        <meta name="description"
            content="OnBoard is a project management system designed from developer for developers"
        />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title ? `${title} | OnBoard` : 'OnBoard'}</title>
		<style>
			html,
			body {
				font-family: system-ui;
				margin: 0;
			}
		</style>
	</head>
	<body class="bg-primary flex flex-col min-h-screen" >
        <header class="sticky top-0" >
            <Navbar/>
        </header>
				<div class="flex-1 flex flex-col justify-between h-full space-y-1" >
        <main class="flex-1 pt-4 px-3 pb-10" >
		    <slot/>
        </main>
        <footer class="mt-full bg-reversed-primary text-white justify-self-end" >
					<Footer/>
        </footer>
			</div>
	</body>
</html>
