---
export interface Props {
    variant?: 'outline' | 'contained' | 'link',
    href?: string,
    class?: string,
    id?: string
}

const {variant = 'contained', href, class: className = '', ...otherProps} = Astro.props

const Component = href ? 'a' : 'button'
---

{variant === 'contained'
    && <Component
        class={className + " bg-olive-700 hover:bg-olive-500 transition-all duration-200 text-sm text-white font-bold py-2 px-4 rounded-lg pointer "}
        href={href}
        {...otherProps}
    >
        <slot/>
    </Component>
}

{variant === 'outline'
    && <Component
        class={className + " border-2 border-olive-700 hover:border-olive-500 h0ver:text-olive-400 transition-all duration-200 text-sm text-olive-500 font-bold py-2 px-4 rounded-lg pointer "}
        href={href}
        {...otherProps}
    >
        <slot/>
    </Component>
}

{variant === 'link'
    && <Component
        class={className + " text-olive-700 hover:text-olive-500 hover:underline transition-all duration-200 pointer "}
        href={href}
        {...otherProps}
    >
        <slot/>
    </Component>
}